<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_tela_perfil"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.didasko.eduardo.tender.TelaPerfil"
    tools:showIn="@layout/tela_perfil">


    <TextView
        android:text="Adicionar Receita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adcReceita"
        android:textColor="?android:attr/colorActivatedHighlight"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/verMreceita"
        android:layout_alignStart="@+id/verMreceita"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <ImageView
        android:layout_width="45px"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/botao_laranja"
        android:id="@+id/verMreceitas"
        android:layout_below="@+id/adReceita"
        android:layout_toRightOf="@+id/verMreceita"
        android:layout_toEndOf="@+id/verMreceita"
        android:clickable="true" />

    <ImageView
        android:layout_width="45px"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/botao_laranja"
        android:id="@+id/adReceita"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/adcReceita"
        android:layout_toEndOf="@+id/adcReceita"
        android:adjustViewBounds="false"
        android:clickable="true" />


    <TextView
        android:text="Ver Minhas Receitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verMreceita"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="?android:attr/colorActivatedHighlight"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/adReceita"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Marcos Vinicius"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/nome"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_above="@+id/adReceita"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 receitas publicadas"
        android:layout_above="@+id/adReceita"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sair"
        android:id="@+id/btnSair"
        android:background="@drawable/rodape"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textSize="36sp" />

    <TextView
        android:text="Chef"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/chefsText"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:fontFamily="cursive"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:layout_above="@+id/profile_pic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/sem_foto"
        android:layout_gravity="center_vertical|right"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>



