<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
                android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1200dp">


            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/barrabar"
            android:id="@+id/imageView3"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageViewReceita"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/backgroud_add"
            android:onClick="btImg"
            android:background="@color/laranjachefs"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/perfilBack"
                android:background="@drawable/perfil1"
                android:layout_above="@+id/imageViewReceita"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_width="55dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:text="Nova Receita"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:layout_alignBaseline="@+id/perfilBack"
            android:layout_alignBottom="@+id/perfilBack"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:textStyle="normal|bold"
            android:textColor="@color/laranjachefs"
            android:background="@color/cardview_light_background"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/imageViewReceita1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/backgroud_add"
                android:onClick="btImg"
                android:background="@color/laranjachefs"
                android:clickable="true"
                android:adjustViewBounds="true"
                android:layout_above="@+id/textView5"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/imageViewReceita2"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/backgroud_add"
                android:onClick="btImg"
                android:background="@color/laranjachefs"
                android:clickable="true"
                android:adjustViewBounds="true"
                android:layout_alignTop="@+id/imageViewReceita"
                android:layout_alignLeft="@+id/imageViewReceita1"
                android:layout_alignStart="@+id/imageViewReceita1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etNome"
                android:layout_gravity="center_horizontal"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textAlignment="center"
                android:textStyle="normal|italic"
                android:layout_below="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:drawable/edit_text"
                android:hint="digite aqui o nome da receita ..."/>

            <TextView
                android:text="Nome da Receita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:id="@+id/textView5"
                android:textSize="24sp"
                android:textColor="@color/laranjachefs"
                android:layout_below="@+id/imageViewReceita"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>

            <EditText
                android:layout_height="300dp"
                android:id="@+id/etDescricao"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textAlignment="center"
                android:layout_width="700dp"
                android:layout_below="@+id/modoPreparo"
                android:textStyle="normal|italic"
                android:background="@android:drawable/edit_text"
                android:hint="ensine-nos como um Chef faz ..."
                android:selectAllOnFocus="true"/>

            <TextView
                android:text="Modo de Preparo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/modoPreparo"
                android:textSize="24sp"
                android:textColor="@color/laranjachefs"
                android:textAlignment="center"
                android:layout_below="@+id/etIngre"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="17dp"/>

            <TextView
                android:text="Ingredientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ingredientes"
                android:textSize="24sp"
                android:textColor="@color/laranjachefs"
                android:layout_marginTop="100dp"
                android:textAlignment="center"
                android:layout_below="@+id/sp_tipo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/etIngre"
                android:layout_gravity="center_horizontal"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textAlignment="center"
                android:textStyle="normal|italic"
                android:layout_marginTop="32dp"
                android:layout_below="@+id/ingredientes"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:drawable/edit_text"
                android:hint="digite aqui os ingredientes ..."/>

            <Button
                android:id="@+id/btnPublicar"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/botao_laranja"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignRight="@+id/imageViewReceita"
                android:layout_alignEnd="@+id/imageViewReceita"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/laranjachefs"
                android:textAlignment="center"
                android:layout_below="@+id/etNome"
                android:layout_centerHorizontal="true"/>

            <Spinner
                android:id="@+id/sp_tipo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/textView4"
                android:layout_alignRight="@+id/imageViewReceita"
                android:layout_alignEnd="@+id/imageViewReceita"/>

            <TextView
                android:text="Click para Publicar."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="13dp"
                android:id="@+id/textView6"
                android:layout_below="@+id/etDescricao"
                android:layout_alignLeft="@+id/sp_tipo"
                android:layout_alignStart="@+id/sp_tipo"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>