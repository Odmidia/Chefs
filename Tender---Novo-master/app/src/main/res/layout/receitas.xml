<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/receitas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.didasko.eduardo.tender.receita">

    <Button
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/homeReceita"
        android:background="@drawable/home_pw"
        android:layout_above="@+id/semImag"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nomeReceita"
        android:layout_alignParentBottom="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Conteudo da Receita"
            android:clickable="false"
            android:textAlignment="center"
            android:singleLine="false"
            android:selectAllOnFocus="true"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/panela"
        android:id="@+id/semImag"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/barrabar"
        android:id="@+id/imageView2"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_width="match_parent" />

    <TextView
        android:text="Receita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomeReceita"
        android:textSize="36sp"
        android:textAllCaps="false"
        android:fontFamily="cursive"
        android:textColor="@color/laranjachefs"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/irChat"
        android:background="@drawable/chat_pw"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="60dp"
        android:layout_height="60dp"/>


</RelativeLayout>
